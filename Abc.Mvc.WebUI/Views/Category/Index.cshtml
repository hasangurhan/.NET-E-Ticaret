@model IEnumerable<Abc.Mvc.WebUI.Entitiy.Category>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayoutt.cshtml";
}
<div class="container pb-5">
    <h2>Kategori Paneli</h2>
    <hr />
    <p>
        @Html.ActionLink("Kategori Oluştur", "Create", null, new { @class = "btn btn-primary btn-sm" })
    </p>
    <table class="table table-hover table-striped">
        <thead>
            <tr>
                <th scope="col"> @Html.DisplayNameFor(model => model.Name)</th>
                <th scope="col"> @Html.DisplayNameFor(model => model.Description)</th>
                <th scope="col" style="width:25%;">İşlem Menüsü</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model)
            {
                <tr>

                    <td>  @Html.DisplayFor(modelItem => item.Name)</td>
                    <td> @Html.DisplayFor(modelItem => item.Description)</td>
                    <td>
                        @Html.ActionLink("Güncelle", "Edit", new { id = item.Id }, new { @class = "btn btn-warning btn-sm" }) |
                        @Html.ActionLink("Detaylar", "Details", new { id = item.Id }, new { @class = "btn btn-primary btn-sm" }) |
                        @Html.ActionLink("Sil", "Delete", new { id = item.Id }, new { @class = "btn btn-danger btn-sm" })
                    </td>
                </tr>
            }
        </tbody>
    </table>
    </div>